{
    "include": [
        "../../src/controller/**/*",
        "../../src/common/**/*"
    ],
    "exclude": [

    ],
    "compilerOptions": {
        "lib": [
            "es2017"
        ],
        "strict": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./lib",
        "rootDir": "../../src",
        "baseUrl": ".",
        "paths": {
            "*": [
                "../../src/controller/types/*",
                "../../src/common/types/*",
				"./node_modules/*",
				"./node_modules/@types/*"
            ]
        }
    }
}
