{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "alexa-for-lg-webos-tv-skill",

  "extends": "../../tsconfig-base.json",

  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "../../src",
    "baseUrl": ".",
    "paths": {
      "*": [
        "../../src/skill/types/*",
        "../../src/common/types/*",
        "node_modules/@types/*",
        "../../node_modules/@types/*",
        "node_modules/*",
        "../../node_modules/*"
      ]
    }
  },

  "include": [
    "../../src/skill/**/*",
    "../../src/common/**/*"],
  "exclude": []
}
