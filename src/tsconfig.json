{
    "include": [
        "./**/*"
    ],
    "exclude": [

    ],
    "compilerOptions": {
        "lib": [
            "es2017"
        ],
        /* Basic Options */
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./lib",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "*": [
                "../src/controller/types/*",
                "../src/gateway/types/*",
                "../src/common/types/*",
                "../pkg/controller/node_modules/*",
                "../pkg/gateway/node_modules/*",
                "../pkg/controller/node_modules/@types/*",
                "../pkg/gateway/node_modules/@types/*"
            ]
        }
    }
}
