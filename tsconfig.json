{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "alexa-for-lg-webos-tv",

  "extends": "./tsconfig-base.json",

  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/skill/types/*",
        "src/bridge/types/*",
        "src/common/types/*",
        "pkg/skill/node_modules/@types/*",
        "pkg/bridge/node_modules/@types/*",
        "pkg/skill/node_modules/*",
        "pkg/bridge/node_modules/*"
      ]
    }
  },

  "include": ["./src/**/*"],
  "exclude": [],

  "typedocOptions": {
    "entryPoints": [
      "src/skill/**/*.ts",
      "src/bridge/**/*.ts",
      "src/common/**/*.ts"
    ],
    "out": "docs",
    "readme": "src/docs/README.md",
    "disableSources": true,
    "excludeExternals": true
  }
}
