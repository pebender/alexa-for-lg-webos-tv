{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "alexa-for-lg-webos-tv",

  "extends": "./tsconfig-base.json",

  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/skill/types/*",
        "src/bridge/types/*",
        "src/common/types/*",
        "pkg/skill/node_modules/@types/*",
        "pkg/bridge/node_modules/@types/*",
        "pkg/skill/node_modules/*",
        "pkg/bridge/node_modules/*"
      ]
    }
  },

  "include": ["./src/**/*"],
  "exclude": [],

  "typedocOptions": {
    "plugin": [
      "typedoc-plugin-markdown"
    ],
    "entryPoints": [
      "src/common/index.ts",
      "src/skill/index.ts",
      "src/bridge/index.ts"
    ],
    "out": "README.d/source-code-api",
    "readme": "none"
  }
}
