{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "alexa-for-lg-webos-tv",

  "extends": "./tsconfig-base.json",

  "include": [ 
    "./packages/common/src/**/*",
    "./packages/bridge/src/**/*",
    "./packages/skill/src/**/*"
  ],

  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "."
  },

  "references": [
    {
      "path": "./packages/common"
    },
    {
      "path": "./packages/bridge"
    },
    {
      "path": "./packages/skill"
    }
  ],

  "typedocOptions": {
    "entryPoints": [
      "./packages/common/src/**/*.ts",
      "./packages/bridge/src/**/*.ts",
      "./packages/skill/src/**/*.ts"
    ],
    "out": "./docs",
    "readme": "./docs.in/README.md",
    "disableSources": true,
    "excludeExternals": true
  }
}
