{
    "include": [
        "../source/controller/**/*",
        "../source/common/**/*"
    ],
    "exclude": [

    ],
    "compilerOptions": {
        "lib": [
            "es2017"
        ],
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./lib",
        "rootDir": "../source",
        "baseUrl": ".",
        "paths": {
            "*": [
                "../source/controller/types/*",
                "../source/common/types/*",
                "node_modules/*",
            ]
        }
    }
}
